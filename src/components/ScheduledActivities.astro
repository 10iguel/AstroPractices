---
import {IMPORTANT_EVENTS} from "../const/importantEvents.ts";
---

<section class="p-4 bg-beige-100">
    {IMPORTANT_EVENTS.map(({date, image,address,description,time,title,location,datetime}) => (
            <article class="flex flex-col md:flex-row justify-center items-center mb-4 last:mb-0">
                <header class="w-full md:w-1/2 p-4 text-center">
                    <h2 class="text-4xl font-serif text-gray-800 uppercase mb-2">{date}</h2>
                    <div class="flex justify-center mb-2">
                        <image.logo/>
                    </div>
                    <h3 class="text-2xl font-serif text-gray-700">{title}</h3>
                    <time class="text-lg text-gray-600 mt-2" datetime={datetime}>{time}</time>
                </header>
                <div class="w-full md:w-1/2 p-4 text-center border-l border-gray-300">
                    <address class="text-gray-600 not-italic">
                        {location}<br />
                        {address}
                    </address>
                    <p class="text-gray-600 mt-2 text-xl">{description}</p>
                </div>
            </article>
    ))}
</section>